<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PeriodicVerifyActivity">

    <EditText
        android:id="@+id/deviceNameBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Device Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:onClick="eSense_BeginIMUTracking"
        android:text="Connect To Device"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deviceNameBox" />

    <TextView
        android:id="@+id/statusBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:text="Status: "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.031"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <TextView
        android:id="@+id/acc_table"
        android:layout_width="378dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:text="ACC values: [] Sampling Rate: 0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statusBox" />

    <TextView
        android:id="@+id/gyro_table"
        android:layout_width="386dp"
        android:layout_height="54dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:text="GYRO values: [] Sampling Rate: 0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acc_table" />


    <Button
        android:id="@+id/pedometer_register"
        android:text="Start"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


    <Button
        android:id="@+id/pedometer_unregister"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="500dp"
        android:text="Stop"
        app:layout_constraintLeft_toRightOf="@+id/pedometer_register"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pedometer_reset"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="500dp"
        android:text="Reset"
        app:layout_constraintLeft_toRightOf="@+id/pedometer_unregister"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/step_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="240dp"
        android:layout_marginRight="8dp"
        android:text="Steps"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.036"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gyro_table" />

    <TextView
        android:id="@+id/stepstextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="0"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step_text" />

    <SeekBar
        android:id="@+id/seekBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:max="100"
        android:progress="12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekbar_text"
        app:layout_constraintVertical_bias="1.0" />


    <TextView
        android:id="@+id/seekbar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="316dp"
        android:text="Senstivity"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step_text" />

    <TextView
        android:id="@+id/xValue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


    <TextView
        android:id="@+id/yValue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="380dp"
        app:layout_constraintLeft_toRightOf="@+id/xValue"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/xAccValue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/yAccValue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/xAccValue"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/zAccValue"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginTop="420dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/zValue"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginTop="380dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>