<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InitAuthActivity">

    <EditText
        android:id="@+id/editText_TypePin"
        android:hint="Type Pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:inputType="numberPassword">
        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button_GeneratePin"
        android:text="GENERATE PIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editText_TypePin"/>

    <Button
        android:id="@+id/button_VerifyPin"
        android:text="VERIFY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button_GeneratePin"/>

    <TextView
        android:id="@+id/textView_TypedPin"
        android:hint="Typed Pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button_VerifyPin"/>

</RelativeLayout>